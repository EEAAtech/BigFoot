    <img src="~/Custom/shell.png" style="position:fixed; right:-38px; bottom: -45px;">


    <div id="TopBody" class="container-fluid">
        <div id="pricing " class="container-fluid pots" style="margin-right: 130px; margin-left: 40px;">

            <div id="titbg">
                <h2 style="margin:0; padding-left:30px;">150 Years Of Gandhiji</h2>
            </div>
            <div style="height:30px">&nbsp;</div>
            <hr />
            <h2 style="font-family: 'Baskerville Old Face'">
                Celebrating Gandhiji at Big Foot
            </h2>
            <p style="font-family: 'Baskerville Old Face'">
                As India celebrates Gandhiji's 149 birth anniversary, at Ancestral Goa we want to highlight his unique legacy - that of being left-handed. A little known fact about the Mahatma, this characteristic is commemorated at The World Famous Left Handers Museum at the Big Foot premises in Lotoulim, where Gandhiji and many other celebrities of note have been featured. To kick-start his 150 year, Ancestral Goa is hosting a collection drive to collect handprints of only left-handers, from 2nd October onwards. These handprints will be stamped on khadi cloth using organic colours, in keeping with Gandhi's ideals - equality. A collage featuring these handprints will be revealed a year later on 2 October 2019, Gandhi Jayanthi. Left Handers can send their hand print on cloth12"X10" with their name on it to Big Foot, Loutolim. Which will be a part of the final collage.
            </p>


            <div class="alert alert-success" id="snackbar">Your Form has been Successfully Submitted!</div>

            @model BigFoot.UsercommentsImage
            @using (Html.BeginForm("Gandhiji", "Home", FormMethod.Post, new { enctype = "multipart/form-data" }))
            {
                @Html.AntiForgeryToken()
                <h4 style="margin-left:30px;">User Comments</h4>
                <div class="form-horizontal">
                    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                    <div class="form-group">
                        @Html.LabelFor(model => model.Name, "Name", htmlAttributes: new { @class = "control-label col-md-2" })
                        <div class="col-md-10">
                            @Html.EditorFor(model => model.Name, new { htmlAttributes = new { @class = "form-control" } })
                            @Html.ValidationMessageFor(model => model.Name, "", new { @class = "text-danger" })
                        </div>
                    </div>

                    <div class="form-group">
                        @Html.LabelFor(model => model.PhoneNumber, "Phone Number", htmlAttributes: new { @class = "control-label col-md-2" })
                        <div class="col-md-10">
                            @Html.EditorFor(model => model.PhoneNumber, new { htmlAttributes = new { @class = "form-control" } })
                            @Html.ValidationMessageFor(model => model.PhoneNumber, "", new { @class = "text-danger" })
                        </div>
                    </div>

                    <div class="form-group">
                        @Html.LabelFor(model => model.Email, htmlAttributes: new { @class = "control-label col-md-2" })
                        <div class="col-md-10">
                            @Html.EditorFor(model => model.Email, new { htmlAttributes = new { @class = "form-control" } })
                            @Html.ValidationMessageFor(model => model.Email, "", new { @class = "text-danger" })
                        </div>
                    </div>

                    <div class="form-group">
                        @Html.LabelFor(model => model.Comments, htmlAttributes: new { @class = "control-label col-md-2" })
                        <div class="col-md-10">
                            @Html.TextAreaFor(model => model.Comments, new { @class = "form-control" })
                            @Html.ValidationMessageFor(model => model.Comments, "", new { @class = "text-danger" })
                        </div>
                    </div>

                    <div class="form-group">
                        <label class="control-label col-md-2">Picture:</label>
                        <div class="col-md-10">
                            <input class="form-control" type="file" id="UploadedFile" name="UploadedFile" />
                        </div>
                    </div>

                    <div class="form-group">
                        <div class="col-md-offset-2 col-md-10">
                            <input type="submit" value="Submit" class="btn btn-default" />
                        </div>
                    </div>
                </div>
            }



            @{
                var Users = (IEnumerable<UserComments>)ViewBag.user;
            }

            @foreach (var item in Users)
            {
                <div class="col-sm-6 col-xs-12">
                    <div class="panel panel-default text-center">

                        @*<div class="panel-body EApic" style="background: url(/Pictures/@p.ImagPath) no-repeat; background-size:cover;">*@
                        <div class="panel-body EApic" style="background: url(../Pictures/@item.Path) no-repeat; background-size:cover;">
                            <div class="EAtext">
                                    @Html.Raw(item.Name)
                                    <br />
                                    @Html.Raw(item.Comment)
                            </div>
                        </div>


                        @*closing divs of row*@
                    </div>

                </div>
            }
        </div>


        <footer>
            <p>&copy; @DateTime.Now.Year - Erryl Alvares</p>
        </footer>
    </div>
    <div class="featurette-divider">
    </div>
    @Scripts.Render("~/bundles/bootstrap")
    @*@RenderSection("scripts", required: false)*@

    <script>
        $(document).ready(function () {
            // Add smooth scrolling to all links in navbar + footer link
            $(".navbar a, footer a").on('click', function (event) {
                // Make sure this.hash has a value before overriding default behavior
                if (this.hash !== "") {
                    // Prevent default anchor click behavior
                    event.preventDefault();

                    // Store hash
                    var hash = this.hash;

                    // Using jQuery's animate() method to add smooth page scroll
                    // The optional number (900) specifies the number of milliseconds it takes to scroll to the specified area
                    $('html, body').animate({
                        scrollTop: $(hash).offset().top
                    }, 900, function () {

                        // Add hash (#) to URL when done scrolling (default click behavior)
                        window.location.hash = hash;
                    });
                } // End if
            });

            $(function () {
                $(".slideanim").each(function () {
                    var pos = $(this).offset().top;

                    var winTop = $(window).scrollTop();
                    if (pos < winTop + 600) {
                        $(this).addClass("slide");
                    }
                });
            });

            $(window).scroll(function () {
                $("#nextappearing").each(function () {
                    var pos = $(this).offset().top;

                    var winTop = $(window).scrollTop();
                    if (pos < winTop + 600) {
                        $(this).addClass("slide");
                    }
                });
            });

            $("#snackbar").css("display","none");
            $(".btn").on("click", function () {
                $("#snackbar").css("display","block");
            });
        })

    </script>


